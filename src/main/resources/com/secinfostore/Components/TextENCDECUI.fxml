<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.secinfostore.controller.components.TextENCDECController">
   <stylesheets>
      <URL value="@../styles/dark-theme.css" />
   </stylesheets>
   <children>
      <!-- Root container with responsive resizing -->
      <VBox alignment="TOP_CENTER" spacing="15" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0" VBox.vgrow="ALWAYS">
         <children>
            <!-- Key Load and Reveal Section -->
            <HBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="createKeyBTN" layoutX="20.0" layoutY="20.0" mnemonicParsing="false" onAction="#buttonClick" text="Create Key" />
                  <Button fx:id="loadKeyBTN" mnemonicParsing="false" onAction="#buttonClick" text="Load Key" />
                  <PasswordField fx:id="keyFieldTxtField" promptText="Enter Key" HBox.hgrow="ALWAYS" />
                  <CheckBox fx:id="revealKeyCheckBox" mnemonicParsing="false" onAction="#checkBoxHandle" text="Reveal" />
               </children>
            </HBox>

            <!-- Input Text Area Section -->
            <HBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
               <children>
                  <TextArea fx:id="inputTextArea" prefHeight="200" promptText="Enter text to encrypt/decrypt" wrapText="true" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>

            <!-- Buttons and Checkboxes Section -->
            <HBox alignment="CENTER_LEFT" spacing="15" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="pasteBTN" mnemonicParsing="false" onAction="#buttonClick" text="Paste Text to Input" />
                  <Button fx:id="computeOutputBTN" mnemonicParsing="false" onAction="#buttonClick" text="Process" />
                  <VBox>
                     <children>
                        <CheckBox fx:id="encCheckbox" mnemonicParsing="false" onAction="#checkBoxHandle" text="Encrypt" />
                        <CheckBox fx:id="decCheckbox" mnemonicParsing="false" onAction="#checkBoxHandle" text="Decrypt" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <CheckBox fx:id="singleBlockCheckBox" mnemonicParsing="false" onAction="#checkBoxHandle" text="Single Block" />
                        <CheckBox fx:id="multiBlockCheckBox" mnemonicParsing="false" onAction="#checkBoxHandle" text="Multi Block" />
                     </children>
                  </VBox>
                  <Button fx:id="qrInputBTN" onAction="#buttonClick" mnemonicParsing="false" text="QR Input" />
               </children>
            </HBox>

            <!-- Output Text Area Section -->
            <HBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
               <children>
                  <TextArea fx:id="outputTextArea" editable="false" prefHeight="200" promptText="Processed Output" wrapText="true" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>

            <!-- Copy Output Button -->
            <HBox alignment="CENTER_LEFT" spacing="10" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="copyOutputBTN" mnemonicParsing="false" onAction="#buttonClick" text="Copy Output" />
                  <Button fx:id="qrOutputBTN" onAction="#buttonClick" mnemonicParsing="false" text="QR Output" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
