<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.secinfostore.secureinfostore.controller.TextENCDECController">
    <stylesheets>
        <URL value="@styles/dark-theme.css" />
    </stylesheets>
   <children>
      <VBox>
         <children>
            <HBox>
               <children>
                  <Button fx:id="loadKeyBTN" mnemonicParsing="false" onAction="#buttonClick" text="Load Key" />
                  <PasswordField fx:id="keyFieldTxtField" />
                  <CheckBox fx:id="revealKeyCheckBox" mnemonicParsing="false" onAction="#checkBoxHandle" text="Reveal" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <TextArea fx:id="inputTextArea" prefHeight="200.0" prefWidth="300.0" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Button fx:id="pasteBTN" layoutX="87.0" layoutY="20.0" mnemonicParsing="false" onAction="#buttonClick" text="Paste Text to Input" />
                  <Button fx:id="computeOutputBTN" mnemonicParsing="false" onAction="#buttonClick" />
                  <CheckBox fx:id="encCheckbox" mnemonicParsing="false" onAction="#checkBoxHandle" text="Encrypt" />
                  <CheckBox fx:id="decCheckbox" mnemonicParsing="false" onAction="#checkBoxHandle" text="Decrypt" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <TextArea fx:id="outputTextArea" prefHeight="200.0" prefWidth="300.0" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Button fx:id="copyOutputBTN" mnemonicParsing="false" onAction="#buttonClick" text="Copy Output" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>

</AnchorPane>
