<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.secinfostore.secureinfostore.controller.AccountsPreviewComponentController">
    <stylesheets>
        <URL value="@styles/dark-theme.css" />
    </stylesheets>
   <children>
      <GridPane>
         <children>
            <VBox alignment="TOP_CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0">
               <children>
                  <HBox>
                     <children>
                        <Button fx:id="copyPlatformBTN" mnemonicParsing="false" onAction="#buttonClick" text="Copy" />
                        <Label text="Platform:" />
                        <Label fx:id="platformLBL" layoutX="196.0" layoutY="25.0" />
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <Button fx:id="copyUsernameBTN" mnemonicParsing="false" onAction="#buttonClick" text="Copy" />
                        <Label text="User Name:" />
                        <Label fx:id="userNameLBL" layoutX="188.0" layoutY="25.0" />
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <Button fx:id="copyEmailBTN" mnemonicParsing="false" onAction="#buttonClick" text="Copy" />
                        <Label text="Email:" />
                        <Label fx:id="emailLBL" layoutX="205.0" layoutY="25.0" />
                     </children>
                  </HBox>
                  <HBox layoutX="20.0" layoutY="138.0">
                     <children>
                        <Button fx:id="copyPasswordBTN" mnemonicParsing="false" onAction="#buttonClick" text="Copy" />
                        <Label text="Password:" />
                        <PasswordField fx:id="passwordTxtField" disable="true" editable="false" />
                        <CheckBox fx:id="revealPassCheckBox" mnemonicParsing="false" onAction="#revealPass" text="Reveal" />
                     </children>
                  </HBox>
                  <HBox>
                     <children>
                        <Button fx:id="updateBTN" mnemonicParsing="false" onAction="#buttonClick" text="Update" />
                        <Button fx:id="deleteBTN" mnemonicParsing="false" onAction="#buttonClick" text="Delete" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <AnchorPane GridPane.columnIndex="1" GridPane.rowIndex="0">
               <children>
                  <ImageView fx:id="platformLogoView" fitHeight="100.0" fitWidth="100.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true" />
               </children>
            </AnchorPane>
         </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints></GridPane>
   </children>
</AnchorPane>
